<style>
#mobileCanvases{
		display: block;
	}
#mobileCanvases > canvas {
    position: absolute;
    cursor:crosshair;
}
	.mPhoto img{
		margin-left: auto;
		margin-right: auto;
	}
	.mDraw{
		padding-left: 12%;
		padding-right: 12%;
	}
	.circle{
		border-radius: 50%;
		behavior: url(PIE.htc);
		width: 20px;
		height: 20px;
		border: 1px dashed;
	}
	.thick {
		width: 20px;
		height: 15px;
		background: black;
		margin-right: 4px;
	}
	.l-box {
		margin: 5px;	
	}
	.pure-g{
		padding-left: 12%;
		padding-right: 12%;
	}
	.mOptL{
		margin-left: auto;
	}
	.mOptR{
		margin-right: auto;
	}
	#colors{
		margin-top: 2px;
		margin-left: 25px;
	}

</style>
<!-- http://i68.tinypic.com/jaewd4.png" -->
<div class="mDraw pure-g">
	<div class="pure-u-24-24" id="countdown">
	minutes:   seconds:  
	</div>
	<div class="mPhoto pure-u-24-24">
		<%= image_tag @photo.url, "data-photo": @photo.id, class: "pure-img", id: "mobileRefPhoto"%>
	</div>
		<div class="mOptL pure-u-1-2">
			<div id = "drawButtons">
				<button type='button' id='next' class="btn btn-warning">Skip</button>&nbsp
				<button type='button' id='go' class="btn btn-danger">Draw</button>
			</div>
			<div id = "saveButtons">
				<button type='button' id='next' class="btn btn-warning">Next</button>&nbsp
				&nbsp<button type='button' id='save' class="btn btn-success">Save</button>
			</div>
				<div id="colors">
					<div class="circle pure-u-1-5" data-fill="#2F2F32">
					</div>
					<div class="circle pure-u-1-5" data-fill="#FF3340">
					</div>
					<div class="circle pure-u-1-5" data-fill="#1C4DE4">
					</div>
					<div class="circle pure-u-1-5" data-fill="#FFFF00">
					</div>
					<div class="circle pure-u-1-5" data-fill="#FFFFFF">
					</div>
				</div>
		</div>
		<div class="mOptR pure-u-1-2">
				<div class="l-box" id="strokes">
					<div class="thick pure-u-1-3" data-stroke="1" data-height="10">
					</div>
					<div class="thick pure-u-1-3" data-stroke="3" data-height="15">
					</div>
					<div class="thick pure-u-1-3" data-stroke="8" data-height="20">
					</div>	
				</div>
		</div>
</div>
	</div>
	<div class="pure-u-24-24" id="mobileCanvases">
		<canvas id="mCanvasBottom" width=320 height=280></canvas>
		<canvas id="mCanvasTop" width=320 height=280></canvas>
    	<!-- <canvas id="mCanvasTop" width=320 height=280></canvas> -->
	</div>
</div>