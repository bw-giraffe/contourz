<style>
#canvases{
	display: block;
	padding: 0;
	margin: auto;
	width: 500px;

	}
#canvases > canvas {
    position: absolute;
    cursor: pointer;
}

.photo {
	margin-left: auto;
	margin-right: auto;
}
.draw{
	padding-left: auto;
	padding-right: auto;
}

img#refPhoto{
	margin-left: auto;
	margin-right: auto;
	max-width: 300px;
	max-height: 280px;
}
#colors{
	margin-top: 4px;
	margin-left: 320px;
	margin-bottom: 4px;
}
.options {
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 4px;
	margin-top: 4px;
}
#saveButtons {
	margin: 0 auto;
}
#drawButtons {
	margin: 0 auto;
}
.circle{
	border-radius: 50%;
	behavior: url(PIE.htc);
	width: 20px;
	height: 20px;
	border: 1px solid;
}
.thick {
	width: 20px;
	height: 17px;
	background: gray;
	border-style: solid;
	border-width: 1px;
	margin-right: 6px;
}
.l-box {
	margin-top: 5px;
	padding: 5px;	
}
.pure-g{
	margin: 0 auto;
}
#strokes{
	margin-top: 5px;
	margin-left: auto;
	margin-right: auto;
}
.circle{
	margin-left: 10px;
}
#mCanvasBottom{
	background: white;
	border-style: dashed;
	border-width: 1px;
}
#countdown{
	background-color: black;
	border-radius: 25px;
	opacity: .75;
	color: white;
	font-family: helvetica !important;
	font-size: 16px !important;
	text-align: center;
	margin-bottom: 5px;
}

</style>
<!-- http://i68.tinypic.com/jaewd4.png" -->
<div class="draw pure-g">
	<div class="pure-u-24-24" id="countdown">
	minutes:   seconds:  
	</div>
</div>
<div class="draw pure-g">
	<div class="photo pure-u-24-24">
		<%= image_tag @photo.url, "data-photo": @photo.id, class: "pure-img", id: "refPhoto"%>
	</div>
</div>
<div class="options pure-g">
		<!-- <div class="pure-u-1-2"> -->
		<div id = "drawButtons" class="l-box">
			<button type='button' id='skip' class="btn btn-warning">Skip</button>&nbsp
			<button type='button' id='draw' class="btn btn-danger">Draw</button>
		</div>
		<div id = "saveButtons" class="l-box">
			<button type='button' id="skipSave" class="btn btn-warning">Next</button>&nbsp
			<button type='button' id='saveDrawing' class="btn btn-success">Save</button>
		</div>
	<div id="colors" class="pure-1-2">
		<div class="circle pure-u-1-5" data-fill="#2F2F32">
		</div>
		<div class="circle pure-u-1-5" data-fill="#FF3340">
		</div>
		<div class="circle pure-u-1-5" data-fill="#1C4DE4">
		</div>
		<div class="circle pure-u-1-5" data-fill="#FFFF00">
		</div>
		<div class="circle pure-u-1-5" data-fill="#FFFFFF">
		</div>
	</div>
	<div id="strokes" class="pure-1-2">
		<div class="thick pure-u-1-3" data-stroke="1" data-height="10">
		</div>
		<div class="thick pure-u-1-3" data-stroke="3" data-height="15">
		</div>
		<div class="thick pure-u-1-3" data-stroke="8" data-height="20">
		</div>	
	</div>
</div>


	<div id="canvases">
		<canvas id="canvasBottom" width=500 height=340></canvas>
		<canvas id="canvasTop" width=500 height=340></canvas>

	</div>