<!DOCTYPE html>
<html>
<head>
  <title>LibApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>
<body>
<ul>
	<% if current_artist%>
		<li><%= link_to "Home", homepage_path %>
		</li>
		<li><%= link_to "Draw", new_drawing_path %>
		</li>
		<li><%= link_to "Galleries", galleries_path %></li>
		<li><%= link_to "Profile", artist_path(current_artist)%></li>
		<li><%= link_to "Log Out", logout_path %></li>
	<% else %>
		<li><%= link_to "Home", homepage_path %>
		</li>
		<li><%= link_to "Create Account", new_artist_path %></li>
		<li><%= link_to "Log In", login_path %></li>
	<% end %>
</ul>

<% flash.each do |name, msg| %>
	<p>
		<small><%= name.capitalize%>: <%= msg %> </small>
	</p>
<% end %>

<%= yield %>

</body>
</html>
